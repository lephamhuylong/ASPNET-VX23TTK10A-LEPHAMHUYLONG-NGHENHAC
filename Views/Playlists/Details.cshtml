@model MyMusicApp.Models.Playlist

@{
    ViewData["Title"] = "Chi tiết Playlist";
}

<h1>@Model.Name</h1>
<hr />

@if (Model.PlaylistSongs != null && Model.PlaylistSongs.Any())
{
    <div id="song-list-container" class="list-group">
        @foreach (var playlistSong in Model.PlaylistSongs)
        {
            <div class="list-group-item list-group-item-action d-flex align-items-center" id="song-@playlistSong.Song.Id">
                <div class="d-flex align-items-center flex-grow-1 song-card" style="cursor: pointer;"
                     data-song-id="@playlistSong.Song.Id" data-title="@playlistSong.Song.Title"
                     data-artist="@playlistSong.Song.Artist" data-image-url="@playlistSong.Song.ImageUrl"
                     data-file-path="@playlistSong.Song.FilePath">

                    <img src="@playlistSong.Song.ImageUrl" alt="@playlistSong.Song.Title" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                    <div class="flex-grow-1">
                        <div class="fw-bold">@playlistSong.Song.Title</div>
                        <small class="text-muted">@playlistSong.Song.Artist</small>
                    </div>
                </div>
                <!-- THÊM NÚT XÓA BÀI HÁT -->
                <button class="btn btn-outline-danger btn-sm btn-remove-from-playlist ms-3"
                        data-song-id="@playlistSong.Song.Id"
                        data-playlist-id="@Model.Id"
                        title="Xóa khỏi playlist">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }
    </div>
}
else
{
    <p>Playlist này chưa có bài hát nào.</p>
}
